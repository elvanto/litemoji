{
    "name": "elvanto/litemoji",
    "description": "A PHP library simplifying the conversion of unicode, HTML and shortcode emoji.",
    "type": "library",
    "keywords": ["php-emoji", "emoji"],
    "license": "MIT",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "milesj/emojibase": "6.0.*"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "milesj/emojibase",
                "version": "6.0.0",
                "source": {
                    "url": "https://github.com/milesj/emojibase",
                    "type": "git",
                    "reference": "tags/emojibase-data@6.0.0"
                }
            }
        }
    ],
    "autoload": {
        "psr-4": {"LitEmoji\\":"src/"}
    },
    "scripts": {
        "update-resources": [
            "@php bin/generate-shortcodes-array.php"
        ]
    }
}
